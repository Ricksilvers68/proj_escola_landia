<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8">
<title>Entradas do dia</title>
<link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
/>
<style>
@media print {
    .no-print { display: none; }
}
</style>
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="mb-4">Entradas do dia</h1>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>RA</th>
                        <th>Hora de Entrada</th>
                    </tr>
                </thead>
                <tbody>
                    <% entradas.forEach(entrada => { %>
                        <tr>
                            <td><%= entrada.nome %></td>
                            <td><%= entrada.ra %></td>
                            <td><%= new Date(entrada.data_hora).toLocaleTimeString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <div class="no-print mt-3">
                <a href="/" class="btn btn-secondary">Voltar</a>
                <button class="btn btn-success" onClick="window.print()">Imprimir Lista do Dia</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>