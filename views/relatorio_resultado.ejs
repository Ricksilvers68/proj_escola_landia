<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Relatório</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5">
  <h2>Relatório de <%= inicio %> até <%= fim %></h2>
  <table class="table table-bordered mt-4">
    <thead class="table-secondary">
      <tr>
        <th>Nome</th>
        <th>RA</th>
        <th>Data/Hora</th>
        <th>Justificativa</th>
        <th>tel_responsavel_1</th>
        <th>tel_responsavel_2</th>
      </tr>
    </thead>
    <tbody>
      <% entradas.forEach(entrada => { %>
        <tr>
          <td><%= entrada.nome %></td>
          <td><%= entrada.ra %></td>
          <td><%= new Date(entrada.data_hora).toLocaleString() %></td>
          <td><%= entrada.justificativa || '-' %></td>
          <td><%= entrada.tel_responsavel_1 || '-' %><br>
  <%= entrada.tel_responsavel_2 || '-' %>
</td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/relatorio_data" class="btn btn-secondary">Voltar</a>
</div>

</body>
</html>