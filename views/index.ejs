<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Alunos</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">

  <style>
    body, html {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    .fixed-header {
      position: sticky;
      top: 0;
      z-index: 999;
      background: #f8f9fa;
      padding: 20px 10px;
      border-bottom: 1px solid #ccc;
    }

    .scrollable-table {
      max-height: 70vh;
      overflow-y: auto;
    }

    table.table td, table.table th {
      padding: 0.4rem 0.5rem;
      line-height: 1.2;
    }

    table.table tbody tr {
      transition: background-color 0.3s ease;
    }

    table.table tbody tr:hover {
      background-color: #deeff5;
      cursor: pointer;
    }

    placeholder {

    }
  </style>
</head>

<body>
<!--para deslogar-->
    <div class="d-flex justify-content-end p-3">
  <a href="/logout" class="btn btn-outline-danger btn-sm">
    <i class="bi bi-box-arrow-right"></i> Sair
  </a>
</div>


  <div class="container mt-3">
    <div class="fixed-header">
        <header class="text-dark text-center py-3">
  <h1 class="h6">E E Professora Landia Santos Batista</h1>
  <h2 class="h6">CONTROLE DE PONTUALIDADE ESCOLAR - CPE</h1>
</header>
      <h2 class="mb-3 center text-center">Lista de Alunos</h2>

      <div class="mb-3">
        <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Buscar por Nome ou RA...">
      </div>

      <form action="/add" method="POST" class="row g-2 align-items-end mb-3">
        <div class="col-md-3">
          <label for="nome" class="form-label">Nome</label>
          <input type="text" id="nome" name="nome" class="form-control" placeholder="Digite o nome" required>
        </div>
        <div class="col-md-2">
          <label for="ra" class="form-label">RA</label>
          <input type="number" id="ra" name="ra" class="form-control" placeholder="RA" required>
        </div>
        <div class="col-md-3">
          <label for="data_nascimento" class="form-label">Data de Nascimento</label>
          <input type="date" id="data_nascimento" name="data_nascimento" class="form-control" required>
        </div>
        <div class="col-auto d-flex align-items-end">
          <button type="submit" class="btn btn-success me-2">
            <i class="bi bi-person-plus"></i> Adicionar Aluno
          </button>
          <a href="/buscar" class="btn btn-secondary me-2">
            <i class="bi bi-search"></i> Registrar Entrada
          </a>
          <a href="/entradas" class="btn btn-info me-2">
            <i class="bi bi-list-ul"></i> Entradas do Dia
          </a>
          <a href="/entradas-mes" class="btn btn-outline-info me-2">
            <i class="bi bi-calendar-month"></i> Entradas do Mês
          </a>
          <button class="btn btn-outline-success" onclick="imprimirTabela()">
            <i class="bi bi-printer"></i> Imprimir
          </button>
        </div>
      </form>
    </div>

    <div class="scrollable-table mt-2">
      <table class="table table-striped table-bordered">
        <thead class="table-light">
          <tr>
            <th>Nome</th>
            <th>RA</th>
            <th>Data de Nascimento</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% alunos.forEach(aluno => { %>
            <tr>
              <td><%= aluno.nome %></td>
              <td><%= aluno.ra %></td>
              <td><%= aluno.data_nascimento.toISOString().split('T')[0] %></td>
              <td>
                <a href="/edit/<%= aluno.id %>" class="btn btn-sm btn-info">Editar</a>
                <form action="/delete/<%= aluno.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este aluno?');">
                  <button type="submit" class="btn btn-sm btn-light">Excluir</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    // Filtro por nome ou RA
    document.getElementById("searchInput").addEventListener("keyup", function () {
      const input = this.value.toLowerCase();
      const rows = document.querySelectorAll("table tbody tr");

      rows.forEach(row => {
        const nome = row.children[0].textContent.toLowerCase();
        const ra = row.children[1].textContent.toLowerCase();
        row.style.display = (nome.includes(input) || ra.includes(input)) ? "" : "none";
      });
    });

    // Função para imprimir apenas a tabela
    function imprimirTabela() {
      const conteudo = document.querySelector(".scrollable-table").innerHTML;
      const original = document.body.innerHTML;
      document.body.innerHTML = conteudo;
      window.print();
      document.body.innerHTML = original;
      location.reload();
    }
  </script>
</body>
</html>