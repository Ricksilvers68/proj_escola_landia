<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- CDN do Bootstrap Icons (versão atual) -->
<link 
  rel="stylesheet" 
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <title>CRUD Alunos</title>
    <link rel="stylesheet" href="/style.css">
</head>

<style>
    /* Diminui espaçamento entre linhas */
    table.table td, table.table th {
        padding: 0.4rem 0.5rem;
        line-height: 1.2;
    }

    /* Transição para destaque no hover */
    table.table tbody tr {
        transition: background-color 0.3s ease;
    }

    table.table tbody tr:hover {
        background-color: #deeff5;
        cursor: pointer;
    }
</style>


<body>
    <h1>Lista de Alunos</h1>
   <form action="/add" method="POST" class="row g-2 align-items-end mb-4">
    <div class="col-md-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" id="nome" name="nome" class="form-control" placeholder="Digite o nome" required>
    </div>

    <div class="col-md-2">
        <label for="ra" class="form-label">RA</label>
        <input type="number" id="ra" name="ra" class="form-control" placeholder="RA" required>
    </div>

    <div class="col-md-3">
        <label for="data_nascimento" class="form-label">Data de Nascimento</label>
        <input type="date" id="data_nascimento" name="data_nascimento" class="form-control" required>
    </div>

    <div class="col-auto d-flex align-items-end">
        <button type="submit" class="btn btn-success me-2">
    <i class="bi bi-person-plus"></i> Adicionar Aluno
</button>
<a href="/buscar" class="btn btn-secondary">
    <i class="bi bi-search"></i> Buscar Aluno
</a>
    </div>
</form>
    <table class="table table-striped table-bordered">
        <thead class="table-bordered">
            <tr>
                <th>Nome</th>
                <th>RA</th>
                <th>Data de Nascimento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% alunos.forEach(aluno => { %>
                <tr>
                    <td><%= aluno.nome %></td>
                    <td><%= aluno.ra %></td>
                    <td><%= aluno.data_nascimento.toISOString().split('T')[0] %></td>
                    <td>
                        <a href="/edit/<%= aluno.id %>" class="btn btn-sm btn-info">Editar</a>
                        <form action="/delete/<%= aluno.id %> method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este aluno?');">
                            <button type="submit" class="btn btn-sm btn-light">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>